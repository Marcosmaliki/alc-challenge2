<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Admin">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:hint="Location"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:hint="Price"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleContentDescription="eye"
            android:layout_marginTop="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hotel"
                android:hint="Hotel"
                android:inputType="text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_margin="25dp"
            android:id="@+id/image_preview"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content" />

        <com.github.nikartm.button.FitButton
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:enabled="true"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            app:fb_cornerRadius="25dp"
            android:layout_marginTop="25dp"
            app:fb_shape="rectangle"
            app:fb_rippleColor="#FBE9E7"
            app:fb_iconWidth="28dp"
            app:fb_iconHeight="28dp"
            app:fb_iconPosition="left"
            app:fb_iconMarginStart="15dp"
            app:fb_iconMarginEnd="15dp"
            app:fb_icon="@drawable/ic_attachment"
            app:fb_iconColor="#FFF"
            app:fb_textColor="#FFF"
            app:fb_textPaddingEnd="20dp"
            app:fb_text="Select Image"
            app:fb_backgroundColor="#FF7043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pbar"/>
        <com.github.nikartm.button.FitButton
            android:id="@+id/submit"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:enabled="true"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            app:fb_cornerRadius="25dp"
            app:fb_shape="rectangle"
            app:fb_rippleColor="#FBE9E7"
            app:fb_iconWidth="28dp"
            app:fb_iconHeight="28dp"
            app:fb_iconPosition="left"
            app:fb_iconMarginStart="25dp"
            app:fb_iconMarginEnd="25dp"
            app:fb_icon="@drawable/ic_cloud"
            app:fb_iconColor="#FFF"
            app:fb_textColor="#FFF"
            app:fb_textPaddingEnd="20dp"
            app:fb_text="Upload destination"
            app:fb_backgroundColor="#FF7043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="139dp"/>
    </LinearLayout>
</ScrollView>